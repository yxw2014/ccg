	#法力水晶
	@classmethod		
	def doEffectAddCrystal(self, room, pos, effect):
		if isinstance(room, dict)== False or isinstance(effect, dict)== False or (pos!=1 and pos!= 2):
			return False
		
		range= effect['targetA']['range']		
		ids= str(range.get('cardID'))
		
		value= effect['value']
		if value== None or value< 1:
			value= 1

		if pos== 1:
			room['crystal1']= room['crystal1']+ value
		else:
			room['crystal2']= room['crystal2']+ value
		
		return True
	
	#火球术
	@classmethod		
	def doEffectAddAtk(self, room, pos, effect, uniqid= None):
		if isinstance(room, dict)== False or isinstance(effect, dict)== False or (pos!=1 and pos!= 2):
			return False
		
		range= effect['targetA']['range']		
		ids= str(range.get('cardID'))
		
		value= effect['value']
		if value== None or value< 1:
			value= 1

		if pos== 1:
			room['hp']= room['hp']- value
		else:
			room['hp']= room['hp']- value
		
		room['hp']= max(room['hp'], 0)
		
		return True
	
