	@classmethod
	def getRoomRandCards(self, data, num=1): 
		if(isinstance(data, list)== False) or num< 0:
			return None
		
		ret= []
		le= len(data)
		if num> le:
			return None
		for i in xrange(0, num):
			le= len(data)

			rand= random.randint(0, le-1)
			p= data.pop(rand)
			ret.append(p)

		return ret
	
